<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <%= simple_form_for(@booking) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, label: "Nom de la reservation" %>
          <%= f.input :start_time, class: "datepicker" %>
          <%= f.input :end_time, class: "datepicker"%>
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
